<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>com.github.deanchou.gitcommithelper</id>
    <name>Git Commit Helper</name>
    <vendor>deanchou</vendor>

    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.goland</depends>
    <depends>org.jetbrains.plugins.go</depends>

    <description><![CDATA[
    A plugin for JetBrains IDEs that provides customizable Git commit message templates.
    Features:
    <ul>
        <li>Predefined commit message templates</li>
        <li>Custom templates configuration</li>
        <li>Integration with IDE's VCS interface</li>
        <li>Support for multiple languages</li>
    </ul>
    ]]></description>

    <extensions defaultExtensionNs="com.intellij">
        <applicationService serviceImplementation="com.github.deanchou.gitcommithelper.services.TemplateSettingsService"/>
        <applicationConfigurable parentId="tools" instance="com.github.deanchou.gitcommithelper.settings.TemplateConfigurable"
                             id="com.github.deanchou.gitcommithelper.settings.TemplateConfigurable"
                             displayName="Commit Template Settings"/>
    </extensions>

    <actions>
        <action id="com.github.deanchou.gitcommithelper.actions.CommitTemplateAction"
                class="com.github.deanchou.gitcommithelper.actions.CommitTemplateAction"
                text="Use Commit Template"
                description="Apply a commit message template">
            <add-to-group group-id="Vcs.MessageActionGroup" anchor="first"/>
        </action>
    </actions>
</idea-plugin>